<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back1"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ergo.ppe_android11.ProfilActivity"
    tools:showIn="@layout/activity_profil">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_marginTop="55dp"
        android:background="@color/Black"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/border"
        ></LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">



        <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_weight="1">


            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/person"
                android:id="@+id/imageView"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:adjustViewBounds="false" />

            <TextView
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titremail"
            android:background="@color/blackt"
            android:textColor="@color/Snow"
            android:layout_weight="1" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mail"
            android:paddingBottom="@dimen/padding_small" />

        <TextView
            android:text="Prénom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/titreprenom"
            android:background="@color/blackt"
            android:textColor="@color/Snow"
            android:layout_weight="1" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prenomview"
            android:layout_weight="1"
            android:paddingBottom="@dimen/padding_small"
          />

        <TextView
            android:text="@string/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titrepass"
            android:background="@color/blackt"
            android:textColor="@color/Snow"

            android:layout_weight="1"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mail"
            android:layout_alignLeft="@+id/mail"
            android:layout_alignStart="@+id/mail"
            android:id="@+id/pass"
            android:paddingBottom="@dimen/padding_small" />

        <TextView
            android:text="Année de Naissance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blackt"
            android:textColor="@color/Snow"

            android:id="@+id/birth"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/birthview"
            android:paddingBottom="@dimen/padding_small"
            android:layout_weight="1"/>

            <TextView
            android:text="Date d'inscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blackt"
            android:textColor="@color/Snow"

            android:id="@+id/signupdate"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signupdateview"

            android:layout_weight="1"/>

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/backto"
            android:id="@+id/backtofirsti"
            android:background="@drawable/backto"
            android:gravity="center" />


        <TextView
            android:text="PROFIL"
            android:layout_alignParentTop="true"
            android:id="@+id/profiltxt"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Snow"
            android:textSize="36sp"
            android:layout_marginLeft="80dp"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
